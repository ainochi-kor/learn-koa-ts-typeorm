{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["ES5", "ES6"],
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "include": ["./src/**/*"]
}
